<Window x:Class="F1DesktopApp.MainWindow"
        MinHeight="500" 
        MinWidth="1000"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F1DesktopApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid" Background="#FF3F3F46">
        <TabControl>
            <TabItem Header="Main">
                <Grid Background="#FF3F3F46">
                    <GroupBox Header="1st dataset" Margin="10,10,497,10"/>
                    <GroupBox Header="2nd dataset" Margin="502,10,5,10" Content=""/>
                </Grid>
            </TabItem>
            <TabItem Header="Secondary">
                <Grid Background="#FF3F3F46"/>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FF3F3F46"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
